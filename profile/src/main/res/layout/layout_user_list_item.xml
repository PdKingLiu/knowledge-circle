<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userIconIv"
        android:layout_width="40dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_user_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/userIconIv"
        app:layout_constraintStart_toEndOf="@id/userIconIv"
        app:layout_constraintTop_toTopOf="@id/userIconIv"
        tools:text="刘沛栋" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/userIconIv" />

</android.support.constraint.ConstraintLayout>